<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="{{ description }}">
        <title>{{ title }}</title>
        <style>
            {% include "_includes/index.css" %}
            {% include "_includes/travel-page.css" %}
        </style>
        <link rel="icon" href="{{ '/favicon.ico' | url }}"/>
        <link rel="stylesheet" href="{{ '/node_modules/@fortawesome/fontawesome-free/css/all.min.css' | url }}" media="print" onload="this.media='all'; this.onload=null;">
        <link rel="stylesheet" href="{{ '/node_modules/blueimp-gallery/css/blueimp-gallery.min.css' | url }}" media="print" onload="this.media='all'; this.onload=null;">
        {% if tags.includes("flags") %}
            <link rel="stylesheet" href="{{ '/node_modules/flag-icon-css/css/flag-icons.min.css' | url }}" media="print" onload="this.media='all'; this.onload=null;">
        {% endif %}
        <script defer data-domain="traveling-coderman.net" src="https://plausible.io/js/plausible.outbound-links.js"></script>
    </head>
    <body>
        <header>
            {% include "_includes/title-portrait.njk" %}
            {% include "_includes/theme-switch.njk" %}
            {% include "_includes/travel-social-links.njk" %}
        </header>
        {{ content | safe }}
    </body>
</html>